  "version": "0.2.0",
  "configurations": [
    {
      "name": "Cucumber InMemory @only",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/@cucumber/cucumber/bin/cucumber-js",
      "args": [
        "${workspaceRoot}/tests/Features/**/*.feature",
        "--profile",
        "inmemory",
        "--tags",
        "@only"
      ]
    },
    {
      "name": "Cucumber Sqlite3 @only",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/@cucumber/cucumber/bin/cucumber-js",
      "args": [
        "${workspaceRoot}/tests/Features/",
        "--profile",
        "sqlite3",
        "--tags",
        "@only"
      ]
    }
  ]
}
